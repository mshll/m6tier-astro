---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Gallery from '~/components/Gallery.astro';
import Socials from '~/components/Socials.astro';

import { Icon } from 'astro-icon/components';
import { Button } from '~/components/ui/button';
import { galleryData, socialData } from '~/data';
import { buttonVariants } from '~/components/ui/button';
import { Link } from 'astro-link';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<script>
  var keywords = ['awesome', 'cool', 'fantastic', 'incredible'];
  var count = 1;

  setInterval(function () {
    var keywordSpan = document.querySelector('span.keyword');

    keywordSpan?.classList.remove('animate-fadeIn');
    keywordSpan?.classList.add('animate-fadeOut');

    setTimeout(function () {
      if (keywordSpan) {
        keywordSpan.textContent = keywords[count];
        count++;
      }

      if (count == keywords.length) count = 0;

      keywordSpan?.classList.remove('animate-fadeOut');
      keywordSpan?.classList.add('animate-fadeIn');
    }, 400);
  }, 2000);
</script>

