---
import { Icon } from 'astro-icon/components';

import { SITE } from '~/config.mjs';

import { Button } from '~/components/ui/button';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconLight?: string;
  iconDark?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  iconClass = 'w-5 h-5',
  iconLight = 'tabler:sun',
  iconDark = 'tabler:moon',
} = Astro.props;
---

{
  !(SITE?.defaultTheme && SITE.defaultTheme.endsWith(':only')) && (
    <>
      <Button variant="outline" size="icon" aria-label={label} data-aw-toggle-color-scheme>
        <Icon name={iconLight} class:list={[iconClass, 'dark:block hidden']} />
        <Icon name={iconDark} class:list={[iconClass, 'block dark:hidden']} />
      </Button>
    </>
  )
}
