---
import '~/assets/styles/base.scss';
import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';
import { PageTransition } from 'astro-page-transition';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="overflow-x-hidden">
  <head>
    <MetaTags {...meta} />
  </head>

  <body class="text-page flex min-h-screen flex-col overflow-x-hidden bg-background antialiased transition-colors">
    <PageTransition speed={300} background="hsl(var(--background))" zIndex={99} />
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
