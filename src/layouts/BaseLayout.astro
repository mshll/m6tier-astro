---
import '~/assets/styles/base.scss';
import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';
import { Toaster } from '@/components/ui/toaster';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection}>
  <head>
    <MetaTags {...meta} />
  </head>

  <body
    class="relative flex min-h-screen flex-col overflow-x-hidden bg-background antialiased transition-colors duration-300"
  >
    <slot />

    <Toaster client:load />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
